<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_recycler_items_background"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"

    android:paddingBottom="8dp"
    android:weightSum="7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="3">
        <com.iam.oneom.env.widget.text.Text
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gay"
            android:layout_weight="6"
            android:textSize="@dimen/media_page_episode_header_search_torrent_item_text_size"
            android:lines="2"
            android:gravity="center_vertical"
            android:id="@+id/title"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4">

        <com.iam.oneom.env.widget.text.Text
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/media_page_episode_header_search_torrent_item_text_size"
            android:text="Uploaded"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/uploaded"
            android:textColor="@color/black" />
        <com.iam.oneom.env.widget.text.Text
            android:layout_width="wrap_content"
            android:textSize="@dimen/media_page_episode_header_search_torrent_item_text_size"
            android:layout_height="match_parent"
            android:text="Lang"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/lang"
            android:textColor="@color/black" />
        <com.iam.oneom.env.widget.text.Text
            android:layout_width="wrap_content"
            android:textSize="@dimen/media_page_episode_header_search_torrent_item_text_size"
            android:layout_height="match_parent"
            android:text="Download"
            android:textColor="@color/blueHyperlink"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/download" />
    </LinearLayout>

</LinearLayout>